                <img class="article-card-picture" src="/media/XPhone.png">
            </div>
            <div class="article-details">
                <h1> <%= article.ArticleTitle %> </h1>
                <p> <%= article.ArticleDescription %> </p>
                <p> CHF <%= article.ArticlePrice %> </p>
                <div class="article-input-group mb-3">
                    <span onclick="decrementArticleCounter()" class="btn btn btn-primary btn-lg text-white font-16 border-0 btn-sub"> <i
                            class="fas fa-minus"></i>
                    </span>
                    <input id="article-counter" class="article-counter" type="number" min="1" value="1" />
                    <span class="btn btn btn-primary btn-lg text-white font-16 border-0 btn-sub"
                        onclick="incrementArticleCounter()"> <i class="fas fa-plus"></i>
                    </span>
                    <button class="btn btn btn-primary btn-lg text-white font-16 border-0 btn-sub"
                        value="<%= article.ArticleId %>" type="submit"> <i class="fas fa-cart-plus"></i>
                    </button>
                    </a>
